<!DOCTYPE html>
<html>
  <head>
    <title>PreizTasks</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar row">
        <h4 class="nav-item col-2">Task Manager</h4>
        <div class="btn btn-success dropdown mr-auto col-2 dropdown-toggle">
          <div class="nav-item" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true">
            <%= link_to 'Sort Projects', '#' %>
          </div>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <span class="dropdown-item" href="#"><%= link_to 'Sort By Name', '#' %></span>
            <span class="dropdown-item" href="#"><%= link_to 'Sort By Last Modified', '#' %></span>
            <span class="dropdown-item" href="#"><%= link_to 'Sort By Last Created', '#' %></span>
          </div>
        </div>
        <div class="btn btn-success nav-item mr-auto col-2"><%= link_to 'Create New Project', '#' %></div>
        <div class="btn btn-success nav-item mr-auto col-2"><%= link_to 'See Active Projects', '#' %></div>
        <div class="btn btn-success nav-item mr-auto col-2"><%= link_to 'See closed projects', '#' %></div>
      </nav>


    <br class="clear" />

    <%= yield %>
  </body>
</html>

